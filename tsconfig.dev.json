{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "noEmit": true,
    "paths": {
      "Src/*": ["./src/*"]
    }
  },
  "exclude": ["**/*.test.ts"],
  "include": ["test/**/*", "src/**/*", "helloworld.ts"]
}
