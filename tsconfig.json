{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "Src/*": ["./src/*"]
    }
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*"]
}
